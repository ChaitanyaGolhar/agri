{
  "name": "agribusiness-app",
  "version": "1.0.0",
  "description": "Agribusiness Management Web Application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "check-mongo": "mongosh --eval \"db.runCommand('ping')\" --quiet",
    "setup": "npm run install-all && echo Setup complete! Make sure MongoDB is running before starting the app.",
    "setup-env": "node setup-env.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["agribusiness", "inventory", "management", "ecommerce"],
  "author": "Agribusiness App",
  "license": "MIT"
}
